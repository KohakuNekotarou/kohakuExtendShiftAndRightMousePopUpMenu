				// Install
				// app.kessarmpumInstall();
				Method{ kKESSARMPUMInstallMethodScriptElement },

				// Remove
				// app.kessarmpumRemove();
				Method{ kKESSARMPUMRemoveMethodScriptElement },

				// Is
				// app.kessarmpumIs();
				Property{ kKESSARMPUMIsPropertyScriptElement, kReadOnly },
			}
		}

		Method
		{
			kKESSARMPUMSetShiftRtMouseMenuItemMethodScriptElement,
			e_KESSARMPUMSetShiftRtMouseMenuItem,
			"KESSARMPUM set shift rt mouse menu item",
			"KESSARMPUM set shift and right mouse button pop up menu item.",
			VoidType,
			{
				p_KESSARMPUMTargetMenuString, // Parameter's ScriptID.
				"KESSARMPUM target menu string", // Parameter's name.
				"KESSARMPUM target menu string.", // Parameter's description.
				StringType, // Parameter's type.
				kRequired, // kOptional or kRequired.
			}
		}

		Method
		{
			kKESSARMPUMSetShiftRtMouseSubMenuMethodScriptElement,
			e_KESSARMPUMSetShiftRtMouseSubMenu,
			"KESSARMPUM set shift rt mouse sub menu",
			"KESSARMPUM set shift and right mouse button pop up sub menu.",
