{
	// Contexts
	{
        kFiredrakeScriptVersion, kCoreScriptManagerBoss, kInDesignAllLanguagesFS, k_Wild,
		kFiredrakeScriptVersion, kCoreScriptManagerBoss, kInCopyAllLanguagesFS, k_Wild,
		
	}
	
	// Elements
	{
		// Connects this plug-in's methods and properties to scripting.
		Provider
		{
			kKESSARMPUMScriptProviderBoss,	// provider boss ID
			{
				Object{ kMenuItemObjectScriptElement },

				// SetMenuItem
				// targetMenu = "RtMouseDefault";
				// app.menuActions.itemByID(271).kessarmpumSetShiftRtMouseMenuItem(targetMenu);
				Method{ kKESSARMPUMSetShiftRtMouseMenuItemMethodScriptElement },

				// ---------------------------------------------------------------------------------------
				Object{ kSubmenuObjectScriptElement },

				// SetMenuItem
				// targetMenu = "RtMouseDefault";
				// subMenuName = "Display Performance";
				// app.menus.item("$ID/RtMouseDefault").submenus.itemByName(subMenuName).kessarmpumSetShiftRtMouseSubMenu(targetMenu);

				Method{ kKESSARMPUMSetShiftRtMouseSubMenuMethodScriptElement },

				// ---------------------------------------------------------------------------------------
